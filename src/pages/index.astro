---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="CODALITY - Your Partners in Software Excellence">
	<main>
		<div class="container">
			<header class="hero">
				<div class="hero-content">
					<img
						src="/CODALITY logo - small.png"
						alt="CODALITY Logo"
						class="logo"
					/>
					<h1>Your Partners in Software Excellence</h1>
